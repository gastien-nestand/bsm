# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (Neon PostgreSQL)
# Get your connection string from https://neon.tech
# Example: postgresql://user:password@ep-xxx-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require
DATABASE_URL=

# JWT Configuration (generate a random secret for production)
JWT_SECRET=your-secret-key-change-this-in-production-min-32-chars

# Application Configuration
VITE_APP_ID=boulangerie-saint-marc

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004

# OAuth Configuration (optional - leave empty if not using OAuth)
OAUTH_SERVER_URL=

# Owner Configuration (optional)
OWNER_OPEN_ID=

# Application Branding
VITE_APP_TITLE=Boulangerie Saint-Marc
VITE_APP_LOGO=/logo.png

# Analytics (optional - leave empty if not using analytics)
VITE_ANALYTICS_ENDPOINT=
VITE_ANALYTICS_WEBSITE_ID=

# Forge API (optional)
BUILT_IN_FORGE_API_URL=
BUILT_IN_FORGE_API_KEY=

# Stripe Payment Configuration (required for online payments)
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Cloudflare R2 Storage (for image uploads)
# Get credentials from Cloudflare dashboard
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_PUBLIC_URL=
